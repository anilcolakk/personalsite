---
/**
 * SearchModal Component
 * Full-screen search modal with Pagefind integration
 * Triggered by Cmd/Ctrl + K or search button in header
 */
---

<div id="search-modal" class="search-modal" role="dialog" aria-modal="true" aria-labelledby="search-modal-title">
  <div class="search-modal__backdrop" data-close-modal></div>
  <div class="search-modal__container">
    <div class="search-modal__header">
      <h2 id="search-modal-title" class="sr-only">Search Notes & Courses</h2>
      <div class="search-modal__input-wrapper">
        <svg class="search-modal__icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
        <input 
          type="search" 
          id="search-input" 
          class="search-modal__input" 
          placeholder="Search notes, courses, topics..."
          autocomplete="off"
          autofocus
        />
        <div class="search-modal__shortcuts">
          <kbd>ESC</kbd>
          <span>to close</span>
        </div>
      </div>
      <button class="search-modal__close" data-close-modal aria-label="Close search">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    
    <!-- Pagefind Search Container -->
    <div id="pagefind-container" class="search-modal__results">
      <div class="search-modal__placeholder">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
        <p>Start typing to search across all notes and courses</p>
        <div class="search-modal__tips">
          <span class="tip"><kbd>↑</kbd><kbd>↓</kbd> to navigate</span>
          <span class="tip"><kbd>Enter</kbd> to select</span>
          <span class="tip"><kbd>ESC</kbd> to close</span>
        </div>
      </div>
    </div>

    <!-- Quick Filters -->
    <div class="search-modal__filters">
      <span class="filter-label">Quick filters:</span>
      <button class="filter-btn" data-filter="year:1">1st Year</button>
      <button class="filter-btn" data-filter="year:2">2nd Year</button>
      <button class="filter-btn" data-filter="year:3">3rd Year</button>
      <button class="filter-btn" data-filter="year:4">4th Year</button>
    </div>
  </div>
</div>

<style>
  .search-modal {
    position: fixed;
    inset: 0;
    z-index: var(--z-modal);
    display: none;
    align-items: flex-start;
    justify-content: center;
    padding-top: 10vh;
  }

  .search-modal.active {
    display: flex;
  }

  .search-modal__backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    animation: fadeIn 0.15s ease;
  }

  .search-modal__container {
    position: relative;
    width: 100%;
    max-width: 640px;
    max-height: 70vh;
    margin: 0 var(--space-4);
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-2xl);
    overflow: hidden;
    animation: scaleIn 0.2s ease;
    display: flex;
    flex-direction: column;
  }

  .search-modal__header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4);
    border-bottom: 1px solid var(--border-color);
  }

  .search-modal__input-wrapper {
    flex: 1;
    display: flex;
    align-items: center;
    gap: var(--space-3);
    background: var(--bg-tertiary);
    border-radius: var(--radius-lg);
    padding: var(--space-3) var(--space-4);
  }

  .search-modal__icon {
    flex-shrink: 0;
    color: var(--text-tertiary);
  }

  .search-modal__input {
    flex: 1;
    background: transparent;
    border: none;
    outline: none;
    font-size: var(--text-base);
    color: var(--text-primary);
  }

  .search-modal__input::placeholder {
    color: var(--text-tertiary);
  }

  .search-modal__shortcuts {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-xs);
    color: var(--text-tertiary);
  }

  .search-modal__shortcuts kbd {
    padding: var(--space-1) var(--space-2);
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-family: var(--font-mono);
  }

  .search-modal__close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: var(--radius-md);
    color: var(--text-tertiary);
    transition: all var(--transition-fast);
  }

  .search-modal__close:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
  }

  .search-modal__results {
    flex: 1;
    overflow-y: auto;
    padding: var(--space-4);
    min-height: 200px;
  }

  .search-modal__placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-8);
    color: var(--text-tertiary);
  }

  .search-modal__placeholder svg {
    opacity: 0.5;
    margin-bottom: var(--space-4);
  }

  .search-modal__placeholder p {
    font-size: var(--text-sm);
    margin-bottom: var(--space-4);
    color: var(--text-secondary);
  }

  .search-modal__tips {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-4);
  }

  .search-modal__tips .tip {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    font-size: var(--text-xs);
  }

  .search-modal__tips kbd {
    padding: 2px 6px;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-sm);
    font-size: 10px;
    font-family: var(--font-mono);
  }

  .search-modal__filters {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-4);
    border-top: 1px solid var(--border-color);
    background: var(--bg-tertiary);
    overflow-x: auto;
  }

  .filter-label {
    font-size: var(--text-xs);
    color: var(--text-tertiary);
    white-space: nowrap;
  }

  .filter-btn {
    padding: var(--space-1) var(--space-3);
    font-size: var(--text-xs);
    font-weight: 500;
    color: var(--text-secondary);
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-full);
    white-space: nowrap;
    transition: all var(--transition-fast);
  }

  .filter-btn:hover {
    border-color: var(--primary-400);
    color: var(--primary-600);
  }

  .filter-btn.active {
    background: var(--primary-600);
    border-color: var(--primary-600);
    color: white;
  }

  /* Pagefind UI Overrides */
  :global(.pagefind-ui) {
    --pagefind-ui-scale: 0.9;
    --pagefind-ui-primary: var(--primary-600);
    --pagefind-ui-text: var(--text-primary);
    --pagefind-ui-background: var(--bg-card);
    --pagefind-ui-border: var(--border-color);
    --pagefind-ui-tag: var(--bg-tertiary);
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: var(--radius-lg);
    --pagefind-ui-font: var(--font-sans);
  }

  :global(.pagefind-ui__search-input) {
    display: none !important;
  }

  :global(.pagefind-ui__result-link) {
    color: var(--text-primary);
    font-weight: 600;
  }

  :global(.pagefind-ui__result-link:hover) {
    color: var(--primary-600);
  }

  :global(.pagefind-ui__result-excerpt) {
    color: var(--text-secondary);
  }

  @media (max-width: 640px) {
    .search-modal {
      padding-top: 0;
      align-items: stretch;
    }

    .search-modal__container {
      max-width: 100%;
      max-height: 100vh;
      margin: 0;
      border-radius: 0;
    }

    .search-modal__shortcuts {
      display: none;
    }

    .search-modal__filters {
      flex-wrap: nowrap;
      -webkit-overflow-scrolling: touch;
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(-10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
</style>

<script>
  // Search Modal Controller
  const searchModal = document.getElementById('search-modal');
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const pagefindContainer = document.getElementById('pagefind-container');
  
  let pagefindUI: any = null;

  // Initialize Pagefind UI when modal opens
  async function initPagefind() {
    if (pagefindUI) return;
    
    try {
      // Use a variable to prevent Vite from trying to resolve this at build time
      const pagefindPath = '/pagefind/pagefind-ui.js';
      // @ts-ignore - Pagefind is loaded from the build output
      const { PagefindUI } = await import(/* @vite-ignore */ pagefindPath);
      
      pagefindUI = new PagefindUI({
        element: '#pagefind-container',
        showEmptyFilters: false,
        showImages: false,
        excerptLength: 15,
        resetStyles: true,
      });
      
      // Hide the default Pagefind input since we have our own
      const defaultInput = pagefindContainer?.querySelector('.pagefind-ui__search-input');
      if (defaultInput) {
        (defaultInput as HTMLElement).style.display = 'none';
      }
    } catch (error) {
      console.log('Pagefind not available - run npm run build first');
    }
  }

  // Open modal
  function openSearchModal() {
    searchModal?.classList.add('active');
    document.body.style.overflow = 'hidden';
    searchInput?.focus();
    initPagefind();
  }

  // Close modal
  function closeSearchModal() {
    searchModal?.classList.remove('active');
    document.body.style.overflow = '';
    if (searchInput) searchInput.value = '';
  }

  // Handle keyboard shortcut Cmd/Ctrl + K
  document.addEventListener('keydown', (e) => {
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      if (searchModal?.classList.contains('active')) {
        closeSearchModal();
      } else {
        openSearchModal();
      }
    }
    
    // Close on ESC
    if (e.key === 'Escape' && searchModal?.classList.contains('active')) {
      closeSearchModal();
    }
  });

  // Close modal when clicking backdrop or close button
  document.querySelectorAll('[data-close-modal]').forEach(el => {
    el.addEventListener('click', closeSearchModal);
  });

  // Trigger search button in header
  document.getElementById('search-trigger')?.addEventListener('click', openSearchModal);

  // Sync our input with Pagefind
  searchInput?.addEventListener('input', (e) => {
    const query = (e.target as HTMLInputElement).value;
    // Trigger Pagefind search
    const pagefindInput = pagefindContainer?.querySelector('.pagefind-ui__search-input') as HTMLInputElement;
    if (pagefindInput) {
      pagefindInput.value = query;
      pagefindInput.dispatchEvent(new Event('input', { bubbles: true }));
    }
  });

  // Quick filter buttons
  document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const filter = (e.target as HTMLElement).dataset.filter;
      if (filter && searchInput) {
        searchInput.value = filter.replace(':', ': ');
        searchInput.dispatchEvent(new Event('input', { bubbles: true }));
        searchInput.focus();
      }
      
      // Toggle active state
      document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
      (e.target as HTMLElement).classList.add('active');
    });
  });
</script>
