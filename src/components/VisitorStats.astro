---
interface Props {
  title?: string;
}

const { title = "Global Visitors" } = Astro.props;

import { getCollection } from 'astro:content';

const notes = await getCollection('notes');
const noteCount = notes.length;
const uniqueCourses = [...new Set(notes.map(n => n.data.course))].length;

const launchDate = new Date('2024-01-01').getTime();
const now = new Date().getTime();
const daysActive = Math.floor((now - launchDate) / (1000 * 60 * 60 * 24));

const currentPath = Astro.url.pathname;
const lang = currentPath.includes('/tr/') ? 'tr' : 'en';
---

<div class="visitor-stats-card">
  <div class="stats-header">
    <h3>{title}</h3>
    <div class="live-dot">
      <span class="dot"></span>
      <span class="label">Live Tracking</span>
    </div>
  </div>

  <div class="stats-grid">
    <div class="stat-item">
      <span class="stat-value">{noteCount}</span>
      <span class="stat-label">{lang === 'tr' ? 'Notlar' : 'Notes'}</span>
    </div>
    <div class="stat-item">
      <span class="stat-value">{uniqueCourses}</span>
      <span class="stat-label">{lang === 'tr' ? 'Dersler' : 'Courses'}</span>
    </div>
    <div class="stat-item">
      <span class="stat-value">{daysActive}</span>
      <span class="stat-label">{lang === 'tr' ? 'GÃ¼n Aktif' : 'Days Active'}</span>
    </div>
  </div>

  <div class="map-container">
    <!-- RevolverMaps 3D Globe Embed -->
    <div style="width: 100%; height: 100%; overflow: hidden; border-radius: inherit;">
      <script type="text/javascript" src="//rf.revolvermaps.com/0/0/8.js?i=5y3x4w0z1a2&amp;m=0&amp;c=ff0000&amp;cr1=ffffff&amp;f=arial&amp;l=33&amp;bv=0" async="async"></script>
    </div>
  </div>
</div>

<style>
  .visitor-stats-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    margin-top: var(--space-8);
  }

  .stats-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-6);
  }

  .stats-header h3 {
    font-size: var(--text-lg);
    font-weight: 700;
  }

  .live-dot {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-xs);
    color: var(--success-500);
    font-weight: 600;
    text-transform: uppercase;
  }

  .dot {
    width: 8px;
    height: 8px;
    background: currentColor;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
    margin-bottom: var(--space-6);
    text-align: center;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .stat-value {
    font-size: var(--text-2xl);
    font-weight: 800;
    color: var(--text-primary);
  }

  .stat-label {
    font-size: var(--text-xs);
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .map-container {
    background: var(--bg-tertiary);
    border-radius: var(--radius-lg);
    overflow: hidden;
    height: 200px; /* Adjust based on widget height */
  }

  .map-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-tertiary);
    background: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 10px,
      rgba(0, 0, 0, 0.03) 10px,
      rgba(0, 0, 0, 0.03) 20px
    );
  }

  .placeholder-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  .instruction {
    font-size: var(--text-xs);
    opacity: 0.7;
  }
</style>
