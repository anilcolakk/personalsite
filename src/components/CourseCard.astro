---
interface Props {
  code: string;
  name: string;
  category: string;
  resourceCount: number;
  description: string;
}

const { code, name, category, resourceCount, description } = Astro.props;
const base = import.meta.env.BASE_URL === '/' ? '' : import.meta.env.BASE_URL.replace(/\/$/, '');
---

<a href={`${base}/courses/${code.toLowerCase()}`} class="course-card">
  <div class="course-header">
    <span class="course-code">{code}</span>
  </div>
  
  <h3 class="course-name">{name}</h3>
  <p class="course-description">{description}</p>
  
  <div class="course-footer">
    <span class="course-category">
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path>
      </svg>
      {category}
    </span>
    <span class="course-resources">
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
        <polyline points="14 2 14 8 20 8"></polyline>
      </svg>
      {resourceCount} resources
    </span>
  </div>
  
  <div class="course-hover-indicator">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="9 18 15 12 9 6"></polyline>
    </svg>
  </div>
</a>

<style>
  .course-card {
    position: relative;
    display: flex;
    flex-direction: column;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    transition: all var(--transition-base);
    overflow: hidden;
  }
  
  .course-card:hover {
    border-color: var(--primary-300);
    box-shadow: var(--shadow-lg), 0 0 30px -10px var(--primary-500);
    transform: translateY(-4px);
  }
  
  [data-theme="dark"] .course-card:hover {
    border-color: var(--primary-700);
  }
  
  .course-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-3);
  }
  
  .course-code {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--primary-600);
    background: var(--primary-50);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-md);
  }
  
  [data-theme="dark"] .course-code {
    color: var(--primary-400);
    background: rgba(59, 130, 246, 0.15);
  }
  
  .course-name {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-2);
    line-height: 1.3;
  }
  
  .course-description {
    font-size: var(--text-sm);
    color: var(--text-tertiary);
    line-height: 1.5;
    margin-bottom: var(--space-4);
    flex-grow: 1;
  }
  
  .course-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-4);
    border-top: 1px solid var(--border-color);
  }
  
  .course-category,
  .course-resources {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    font-size: var(--text-xs);
    color: var(--text-tertiary);
    font-weight: 500;
  }
  
  .course-hover-indicator {
    position: absolute;
    right: var(--space-6);
    top: 50%;
    transform: translateY(-50%) translateX(20px);
    opacity: 0;
    color: var(--primary-500);
    transition: all var(--transition-base);
  }
  
  .course-card:hover .course-hover-indicator {
    opacity: 1;
    transform: translateY(-50%) translateX(0);
  }
</style>
