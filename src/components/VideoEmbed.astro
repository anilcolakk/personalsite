---
/**
 * VideoEmbed Component
 * Embeds YouTube Shorts or Instagram Reels
 * Lazy loading and responsive aspect ratio
 */
interface Props {
  /** Video platform: 'youtube' or 'instagram' */
  platform: 'youtube' | 'instagram';
  /** Video ID (YouTube) or Reel URL shortcode (Instagram) */
  videoId: string;
  /** Title for accessibility */
  title?: string;
  /** Custom thumbnail URL (optional, YouTube auto-generates) */
  thumbnail?: string;
  /** Aspect ratio: 'vertical' for Shorts/Reels, 'horizontal' for regular videos */
  aspectRatio?: 'vertical' | 'horizontal';
}

const { 
  platform, 
  videoId, 
  title = 'Video content',
  thumbnail,
  aspectRatio = 'vertical'
} = Astro.props;

// Generate embed URLs
const youtubeEmbedUrl = `https://www.youtube.com/embed/${videoId}?rel=0&modestbranding=1`;
const instagramEmbedUrl = `https://www.instagram.com/reel/${videoId}/embed`;

// YouTube thumbnail fallback - hqdefault is more reliable than maxresdefault
const youtubeThumbnail = thumbnail || `https://i.ytimg.com/vi/${videoId}/hqdefault.jpg`;
---

<div class={`video-embed video-embed--${platform} video-embed--${aspectRatio}`}>
  <div class="video-embed__wrapper">
    {platform === 'youtube' && (
      <div class="video-embed__lazy" data-video-id={videoId}>
        <img 
          src={youtubeThumbnail} 
          alt={title}
          class="video-embed__thumbnail"
          loading="lazy"
        />
        <button class="video-embed__play" aria-label={`Play: ${title}`}>
          <svg viewBox="0 0 68 48" width="68" height="48">
            <path class="video-embed__play-bg" d="M66.52,7.74c-0.78-2.93-2.49-5.41-5.42-6.19C55.79,.13,34,0,34,0S12.21,.13,6.9,1.55 C3.97,2.33,2.27,4.81,1.48,7.74C0.06,13.05,0,24,0,24s0.06,10.95,1.48,16.26c0.78,2.93,2.49,5.41,5.42,6.19 C12.21,47.87,34,48,34,48s21.79-0.13,27.1-1.55c2.93-0.78,4.64-3.26,5.42-6.19C67.94,34.95,68,24,68,24S67.94,13.05,66.52,7.74z" fill="#f00"></path>
            <path d="M 45,24 27,14 27,34" fill="#fff"></path>
          </svg>
        </button>
        <span class="video-embed__badge" style="z-index: 2;">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="14" height="14" fill="currentColor">
            <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
          </svg>
          Shorts
        </span>
      </div>
    )}
    
    {platform === 'instagram' && (
      <div class="video-embed__instagram">
        <blockquote 
          class="instagram-media" 
          data-instgrm-permalink={`https://www.instagram.com/reel/${videoId}/`}
          data-instgrm-version="14"
        >
          <div class="video-embed__placeholder">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="48" height="48" fill="currentColor">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
            <span>Loading Instagram Reel...</span>
          </div>
        </blockquote>
      </div>
    )}
  </div>
  
  <p class="video-embed__title">{title}</p>
</div>

<style>
  .video-embed {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .video-embed__wrapper {
    position: relative;
    width: 100%;
    border-radius: var(--radius-xl);
    overflow: hidden;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-color);
  }

  /* Aspect ratios */
  .video-embed--vertical .video-embed__wrapper {
    aspect-ratio: 9 / 16;
    max-height: 500px;
  }

  .video-embed--horizontal .video-embed__wrapper {
    aspect-ratio: 16 / 9;
  }

  /* Lazy load container */
  .video-embed__lazy {
    position: relative;
    width: 100%;
    height: 100%;
    cursor: pointer;
  }

  .video-embed__thumbnail {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .video-embed__lazy:hover .video-embed__thumbnail {
    transform: scale(1.02);
  }

  .video-embed__play {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: none;
    border: none;
    cursor: pointer;
    transition: transform var(--transition-fast), opacity var(--transition-fast);
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  }

  .video-embed__lazy:hover .video-embed__play {
    transform: translate(-50%, -50%) scale(1.1);
  }

  .video-embed__play-bg {
    transition: fill var(--transition-fast);
  }

  .video-embed__lazy:hover .video-embed__play-bg {
    fill: #cc0000;
  }

  .video-embed__badge {
    position: absolute;
    bottom: var(--space-3);
    left: var(--space-3);
    display: flex;
    align-items: center;
    gap: var(--space-1);
    padding: var(--space-1) var(--space-2);
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    border-radius: var(--radius-sm);
    color: white;
    font-size: var(--text-xs);
    font-weight: 600;
  }

  /* iframe when video is playing */
  .video-embed__wrapper iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  /* Instagram embed */
  .video-embed__instagram {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .video-embed__instagram :global(.instagram-media) {
    margin: 0 !important;
    min-width: 100% !important;
    max-width: 100% !important;
  }

  .video-embed__placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    padding: var(--space-8);
    color: var(--text-tertiary);
    text-align: center;
  }

  .video-embed__placeholder svg {
    opacity: 0.5;
  }

  .video-embed__placeholder span {
    font-size: var(--text-sm);
  }

  .video-embed__title {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--text-secondary);
    text-align: center;
    margin: 0;
    padding: 0 var(--space-2);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Loaded state */
  .video-embed--loaded .video-embed__lazy {
    pointer-events: none;
  }

  .video-embed--loaded .video-embed__thumbnail,
  .video-embed--loaded .video-embed__play,
  .video-embed--loaded .video-embed__badge {
    display: none;
  }
</style>

<script>
  // Lazy load YouTube videos
  document.querySelectorAll('.video-embed__lazy').forEach((container) => {
    const playBtn = container.querySelector('.video-embed__play');
    const videoId = (container as HTMLElement).dataset.videoId;
    
    playBtn?.addEventListener('click', (e) => {
      e.stopPropagation();
      loadVideo(container as HTMLElement, videoId!);
    });
    
    container.addEventListener('click', () => {
      loadVideo(container as HTMLElement, videoId!);
    });
  });

  function loadVideo(container: HTMLElement, videoId: string) {
    const wrapper = container.closest('.video-embed__wrapper');
    const embed = container.closest('.video-embed');
    
    const iframe = document.createElement('iframe');
    iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0&modestbranding=1`;
    iframe.title = 'YouTube video player';
    iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture';
    iframe.allowFullscreen = true;
    
    wrapper?.appendChild(iframe);
    embed?.classList.add('video-embed--loaded');
  }

  // Load Instagram embed script
  const loadInstagramEmbed = () => {
    if (document.getElementById('instagram-embed-js')) return;
    
    const hasInstagramEmbed = document.querySelector('.instagram-media');
    if (!hasInstagramEmbed) return;
    
    const script = document.createElement('script');
    script.id = 'instagram-embed-js';
    script.src = 'https://www.instagram.com/embed.js';
    script.async = true;
    document.body.appendChild(script);
  };

  loadInstagramEmbed();
</script>
