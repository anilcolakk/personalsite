---
import { languages, ui } from '../i18n/utils';

const base = import.meta.env.BASE_URL === '/' ? '' : import.meta.env.BASE_URL.replace(/\/$/, '');
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith(`${base}/tr`) ? 'tr' : 'en';
const t = ui[lang];

const homeUrl = lang === 'en' ? `${base}/` : `${base}/tr/`;
const coursesUrl = lang === 'en' ? `${base}/courses` : `${base}/tr/courses`;
const equivalencyUrl = lang === 'en' ? `${base}/equivalency` : `${base}/tr/equivalency`;
const blogUrl = lang === 'en' ? `${base}/blog` : `${base}/tr/blog`;
const aboutUrl = lang === 'en' ? `${base}/about` : `${base}/tr/about`;
const contactUrl = lang === 'en' ? `${base}/contact` : `${base}/tr/contact`;

const toggleLang = lang === 'en' ? 'tr' : 'en';

function getLangUrl(path: string, targetLang: 'en' | 'tr') {
  let normalizedPath = path;
  if (base && normalizedPath.startsWith(base)) {
    normalizedPath = normalizedPath.substring(base.length);
  }
  if (targetLang === 'tr') {
    if (normalizedPath.startsWith('/tr')) return `${base}${normalizedPath}`;
    return `${base}/tr${normalizedPath === '/' ? '' : normalizedPath}`;
  } else {
    if (normalizedPath.startsWith('/tr')) return `${base}${normalizedPath.substring(3) || '/'}`;
    return `${base}${normalizedPath}`;
  }
}

const toggleUrl = getLangUrl(currentPath, toggleLang);
---

<header class="header">
  <div class="container">
    <nav class="nav">
      <a href={homeUrl} class="logo">
        <span class="logo-icon">ðŸ“š</span>
        <span class="logo-text">AnÄ±l Ã‡olak</span>
      </a>
      
      <ul class="nav-links" id="nav-links">
        <li><a href={homeUrl} class="nav-link">{t['nav.home']}</a></li>
        <li><a href={coursesUrl} class="nav-link">{t['nav.courses']}</a></li>
        <li><a href={equivalencyUrl} class="nav-link">{t['nav.equivalency']}</a></li>
        <li><a href={blogUrl} class="nav-link">{t['nav.blog']}</a></li>
        <li><a href={aboutUrl} class="nav-link">{t['nav.about']}</a></li>
        <li><a href={contactUrl} class="nav-link">{t['nav.contact']}</a></li>
      </ul>
      
      <div class="nav-actions">
        <a href={toggleUrl} class="lang-toggle">{toggleLang.toUpperCase()}</a>
        <button id="search-trigger" class="search-trigger" aria-label="Search">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.35-4.35"></path></svg>
        </button>
        <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
          <svg class="icon-sun" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>
          <svg class="icon-moon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>
        </button>
        <button id="mobile-menu-btn" class="mobile-menu-btn" aria-label="Menu">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
        </button>
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border-color, #e5e7eb);
  }
  
  [data-theme="dark"] .header {
    background: rgba(15, 23, 42, 0.9);
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 64px;
  }
  
  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--text-primary, #111);
    text-decoration: none;
  }
  
  .nav-links {
    display: flex;
    gap: 0.25rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .nav-link {
    padding: 0.5rem 0.75rem;
    color: var(--text-secondary, #666);
    text-decoration: none;
    border-radius: 0.5rem;
    font-size: 0.875rem;
  }
  
  .nav-link:hover {
    background: var(--bg-tertiary, #f3f4f6);
    color: var(--text-primary, #111);
  }
  
  [data-theme="dark"] .nav-link {
    color: #ffffff !important;
  }
  
  [data-theme="dark"] .nav-link:hover {
    background: #334155;
    color: #ffffff !important;
  }
  
  [data-theme="dark"] .logo {
    color: #ffffff !important;
  }
  
  [data-theme="dark"] .lang-toggle {
    color: #ffffff !important;
    border-color: #475569;
  }
  
  [data-theme="dark"] .search-trigger {
    color: #e2e8f0;
    border-color: #475569;
  }
  
  [data-theme="dark"] .theme-toggle {
    color: #e2e8f0;
  }
  
  .nav-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .lang-toggle {
    padding: 0.5rem;
    border: 1px solid var(--border-color, #e5e7eb);
    border-radius: 0.5rem;
    background: transparent;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--text-secondary, #666);
  }
  
  .theme-toggle, .mobile-menu-btn {
    padding: 0.5rem;
    background: transparent;
    border: none;
    cursor: pointer;
    font-size: 1.25rem;
  }
  
  .mobile-menu-btn {
    display: none;
  }
  
  .search-trigger {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    background: transparent;
    border: 1px solid var(--border-color, #e5e7eb);
    border-radius: 0.5rem;
    cursor: pointer;
    color: var(--text-secondary, #666);
  }
  
  .search-trigger:hover {
    border-color: var(--primary-400);
    color: var(--primary-600);
  }
  
  .icon-sun { display: block; }
  .icon-moon { display: none; }
  
  [data-theme="dark"] .icon-sun { display: none; }
  [data-theme="dark"] .icon-moon { display: block; }
  
  @media (max-width: 1024px) {
    .nav-links {
      display: none;
      position: absolute;
      top: 64px;
      left: 0;
      right: 0;
      background: var(--bg-primary, #ffffff);
      border-bottom: 1px solid var(--border-color, #e5e7eb);
      flex-direction: column;
      padding: 1rem;
      gap: 0.5rem;
    }
    
    .nav-links.active {
      display: flex;
    }
    
    [data-theme="dark"] .nav-links {
      background: #0f172a;
      border-color: #334155;
    }
    
    .mobile-menu-btn {
      display: block;
      color: var(--text-primary);
    }
    
    [data-theme="dark"] .mobile-menu-btn {
      color: #ffffff;
    }
  }
</style>

<script>
  const themeToggle = document.getElementById('theme-toggle');
  themeToggle?.addEventListener('click', () => {
    const current = document.documentElement.getAttribute('data-theme');
    const next = current === 'dark' ? 'light' : 'dark';
    document.documentElement.setAttribute('data-theme', next);
    localStorage.setItem('theme', next);
  });
  
  const menuBtn = document.getElementById('mobile-menu-btn');
  const navLinks = document.getElementById('nav-links');
  menuBtn?.addEventListener('click', () => {
    navLinks?.classList.toggle('active');
  });
</script>
