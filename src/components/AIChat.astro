---
/**
 * AIChat Component
 * A floating chat button that provides AI tutoring assistance
 * Uses user's OpenAI API key stored in localStorage
 */
---

<div class="ai-chat-widget" id="ai-chat-widget">
  <button class="ai-chat-trigger" id="ai-chat-trigger" aria-label="Ask AI Tutor">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
    </svg>
    <span class="chat-label">AI Tutor</span>
  </button>
  
  <div class="ai-chat-panel" id="ai-chat-panel">
    <div class="chat-header">
      <div class="chat-title">
        <span class="chat-avatar">ü§ñ</span>
        <div>
          <h4>AI Study Assistant</h4>
          <span class="chat-subtitle">Ask about EE topics</span>
        </div>
      </div>
      <button class="chat-close" id="chat-close" aria-label="Close">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    
    <div class="chat-messages" id="chat-messages">
      <div class="message assistant">
        <p>Hi! I'm your AI study assistant. Ask me anything about:</p>
        <ul>
          <li>üìö Circuit Analysis concepts</li>
          <li>‚ö° Electronics fundamentals</li>
          <li>üìä Signal processing topics</li>
          <li>üîß Problem-solving techniques</li>
        </ul>
        <p class="hint">Tip: Set up your OpenAI API key in the settings for best results.</p>
      </div>
    </div>
    
    <div class="chat-api-notice" id="chat-api-notice">
      <p>‚ö†Ô∏è Add your OpenAI API key to enable AI responses</p>
      <div class="api-key-form">
        <input type="password" id="chat-api-key" placeholder="sk-..." />
        <button id="save-chat-key" class="btn-sm">Save</button>
      </div>
    </div>
    
    <form class="chat-input-form" id="chat-form">
      <input 
        type="text" 
        id="chat-input" 
        placeholder="Ask a question..." 
        autocomplete="off"
      />
      <button type="submit" class="chat-send" aria-label="Send">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="22" y1="2" x2="11" y2="13"></line>
          <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
        </svg>
      </button>
    </form>
  </div>
</div>

<style>
  .ai-chat-widget {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 1000;
    font-family: var(--font-sans, system-ui, sans-serif);
  }
  
  .ai-chat-trigger {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background: var(--primary-600, #2563eb);
    color: white;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    font-weight: 600;
    font-size: 14px;
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
    transition: all 0.2s;
  }
  
  .ai-chat-trigger:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(37, 99, 235, 0.4);
  }
  
  .ai-chat-panel {
    display: none;
    position: absolute;
    bottom: 60px;
    right: 0;
    width: 380px;
    max-height: 500px;
    background: var(--bg-card, #fff);
    border: 1px solid var(--border-color, #e5e7eb);
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    flex-direction: column;
    overflow: hidden;
  }
  
  .ai-chat-panel.open {
    display: flex;
  }
  
  .chat-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px;
    border-bottom: 1px solid var(--border-color, #e5e7eb);
    background: var(--bg-secondary, #f9fafb);
  }
  
  .chat-title {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .chat-avatar {
    font-size: 28px;
  }
  
  .chat-title h4 {
    margin: 0;
    font-size: 16px;
    font-weight: 700;
    color: var(--text-primary, #111);
  }
  
  .chat-subtitle {
    font-size: 12px;
    color: var(--text-tertiary, #6b7280);
  }
  
  .chat-close {
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    color: var(--text-tertiary, #6b7280);
    border-radius: 8px;
  }
  
  .chat-close:hover {
    background: var(--bg-tertiary, #f3f4f6);
  }
  
  .chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: 16px;
    max-height: 300px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .message {
    padding: 12px 16px;
    border-radius: 12px;
    font-size: 14px;
    line-height: 1.5;
  }
  
  .message.assistant {
    background: var(--bg-secondary, #f3f4f6);
    color: var(--text-primary, #111);
  }
  
  .message.user {
    background: var(--primary-600, #2563eb);
    color: white;
    align-self: flex-end;
    max-width: 80%;
  }
  
  .message ul {
    margin: 8px 0;
    padding-left: 20px;
  }
  
  .message li {
    margin: 4px 0;
  }
  
  .message .hint {
    font-size: 12px;
    color: var(--text-tertiary, #6b7280);
    margin-top: 12px;
    font-style: italic;
  }
  
  .chat-api-notice {
    padding: 12px 16px;
    background: #fef3c7;
    border-top: 1px solid #fcd34d;
    font-size: 13px;
  }
  
  [data-theme="dark"] .chat-api-notice {
    background: #422006;
    border-color: #713f12;
  }
  
  .api-key-form {
    display: flex;
    gap: 8px;
    margin-top: 8px;
  }
  
  .api-key-form input {
    flex: 1;
    padding: 8px 12px;
    border: 1px solid var(--border-color, #e5e7eb);
    border-radius: 6px;
    font-size: 13px;
  }
  
  .api-key-form .btn-sm {
    padding: 8px 16px;
    background: var(--primary-600, #2563eb);
    color: white;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
  }
  
  .chat-api-notice.hidden {
    display: none;
  }
  
  .chat-input-form {
    display: flex;
    gap: 8px;
    padding: 12px 16px;
    border-top: 1px solid var(--border-color, #e5e7eb);
    background: var(--bg-primary, #fff);
  }
  
  .chat-input-form input {
    flex: 1;
    padding: 10px 14px;
    border: 1px solid var(--border-color, #e5e7eb);
    border-radius: 10px;
    font-size: 14px;
    background: var(--bg-secondary, #f9fafb);
    color: var(--text-primary, #111);
  }
  
  .chat-input-form input:focus {
    outline: none;
    border-color: var(--primary-500, #3b82f6);
  }
  
  .chat-send {
    padding: 10px 14px;
    background: var(--primary-600, #2563eb);
    color: white;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: background 0.2s;
  }
  
  .chat-send:hover {
    background: var(--primary-700, #1d4ed8);
  }
  
  @media (max-width: 640px) {
    .ai-chat-panel {
      width: calc(100vw - 48px);
      bottom: 70px;
    }
    
    .chat-label {
      display: none;
    }
    
    .ai-chat-trigger {
      padding: 14px;
      border-radius: 50%;
    }
  }
</style>

<script>
  const trigger = document.getElementById('ai-chat-trigger');
  const panel = document.getElementById('ai-chat-panel');
  const closeBtn = document.getElementById('chat-close');
  const form = document.getElementById('chat-form') as HTMLFormElement;
  const input = document.getElementById('chat-input') as HTMLInputElement;
  const messagesContainer = document.getElementById('chat-messages');
  const apiNotice = document.getElementById('chat-api-notice');
  const saveKeyBtn = document.getElementById('save-chat-key');
  const apiKeyInput = document.getElementById('chat-api-key') as HTMLInputElement;
  
  // Check for existing API key
  const savedKey = localStorage.getItem('openai_api_key');
  if (savedKey) {
    apiNotice?.classList.add('hidden');
  }
  
  trigger?.addEventListener('click', () => {
    panel?.classList.toggle('open');
  });
  
  closeBtn?.addEventListener('click', () => {
    panel?.classList.remove('open');
  });
  
  saveKeyBtn?.addEventListener('click', () => {
    const key = apiKeyInput?.value.trim();
    if (key && key.startsWith('sk-')) {
      localStorage.setItem('openai_api_key', key);
      apiNotice?.classList.add('hidden');
      addMessage('API key saved! I can now help you with your questions.', 'assistant');
    }
  });
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const message = input.value.trim();
    if (!message) return;
    
    addMessage(message, 'user');
    input.value = '';
    
    const apiKey = localStorage.getItem('openai_api_key');
    if (!apiKey) {
      addMessage('Please add your OpenAI API key above to enable AI responses.', 'assistant');
      return;
    }
    
    addMessage('Thinking...', 'assistant');
    
    try {
      const response = await fetch('https://api.openai.com/v1/chat/completions', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${apiKey}`
        },
        body: JSON.stringify({
          model: 'gpt-3.5-turbo',
          messages: [
            {
              role: 'system',
              content: 'You are a helpful electrical engineering tutor. Provide clear, concise explanations for EE topics including circuits, electronics, signals, and related subjects. Use simple language and examples when helpful. Keep responses brief but informative.'
            },
            { role: 'user', content: message }
          ],
          max_tokens: 500
        })
      });
      
      const data = await response.json();
      
      // Remove "Thinking..." message
      const lastMessage = messagesContainer?.lastElementChild;
      if (lastMessage?.textContent === 'Thinking...') {
        lastMessage.remove();
      }
      
      if (data.choices?.[0]?.message?.content) {
        addMessage(data.choices[0].message.content, 'assistant');
      } else if (data.error) {
        addMessage(`Error: ${data.error.message}`, 'assistant');
      }
    } catch (err) {
      const lastMessage = messagesContainer?.lastElementChild;
      if (lastMessage?.textContent === 'Thinking...') {
        lastMessage.remove();
      }
      addMessage('Sorry, there was an error. Please check your API key and try again.', 'assistant');
    }
  });
  
  function addMessage(text: string, role: 'user' | 'assistant') {
    const div = document.createElement('div');
    div.className = `message ${role}`;
    div.innerHTML = `<p>${text}</p>`;
    messagesContainer?.appendChild(div);
    messagesContainer?.scrollTo({ top: messagesContainer.scrollHeight, behavior: 'smooth' });
  }
</script>
