    greeting: "Hi! I'm your AI study assistant powered by Gemini. I can help with:",
    topics: ['Circuit Analysis', 'Electronics', 'Signals & Systems', 'Math for Engineers', 'Study Tips'],
    hint: 'Important: I am in Beta and restricted to 10 questions per day.',
    thinking: 'Thinking...',
    error: 'Error generating response. Please try again.',
    limitReached: '‚ö†Ô∏è You have reached your daily limit of 10 messages. Please come back tomorrow!'
  },
  tr: {
