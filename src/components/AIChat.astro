    color: white;
    border-bottom-right-radius: 4px;
    align-self: flex-end;
  }
  
  .message ul {
    margin: 8px 0;
    padding-left: 0;
    list-style: none;
  }
  
  .message li { margin-bottom: 4px; }
  
  .hint {
    font-size: 12px;
    opacity: 0.8;
    margin-top: 8px;
    font-style: italic;
  }
  
  .thinking {
    opacity: 0.7;
    font-style: italic;
  }
  
  .chat-api-section {
    padding: 12px 16px;
    background: var(--bg-tertiary, #f8fafc);
    border-top: 1px solid var(--border-color, #e5e7eb);
  }

