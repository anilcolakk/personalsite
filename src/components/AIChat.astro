    display: block;
    font-size: 12px;
    color: #10b981;
    margin-bottom: 8px;
    text-decoration: none;
  }
  
  .api-input-row {
    display: flex;
    gap: 8px;
  }
  
  #grok-api-key {
    flex: 1;
    padding: 8px;
    border-radius: 6px;
    border: 1px solid var(--border-color, #cbd5e1);
    font-size: 12px;
    background: var(--bg-primary, #fff);
    color: var(--text-primary, #0f172a);
  }
  
  .btn-save {
    padding: 8px 12px;
    background: #334155;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 12px;
    cursor: pointer;
  }
  
  .chat-input-form {
    padding: 16px;
    border-top: 1px solid var(--border-color, #e5e7eb);
    display: flex;
    gap: 8px;
    background: var(--bg-card, #fff);
  }

  [data-theme="dark"] .chat-input-form {
    background: #1e293b;
    border-color: #334155;
  }
  
  #chat-input {
    flex: 1;
    padding: 10px 16px;
    border-radius: 24px;
    border: 1px solid var(--border-color, #cbd5e1);
    font-size: 14px;
    background: var(--bg-primary, #fff);
    color: var(--text-primary, #0f172a);
  }

  [data-theme="dark"] #chat-input {
    background: #0f172a;
    border-color: #475569;
    color: white;
  }
  
  #chat-input:focus {
    outline: none;
    border-color: #10b981;
  }
  
  .chat-send {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #10b981;
    color: white;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background 0.2s;
  }
  
  .chat-send:hover { background: #059669; }
  
  @media (max-width: 640px) {
    .ai-chat-panel { width: calc(100vw - 48px); bottom: 70px; }
    .chat-label { display: none; }
    .ai-chat-trigger { padding: 14px; border-radius: 50%; }
  }
</style>

<!-- Inject API key securely for static client-side usage -->
<script is:inline define:vars={{ apiKey: import.meta.env.PUBLIC_GEMINI_API_KEY }}>
  window.GEMINI_API_KEY = apiKey;
</script>

<script is:inline>
  // Simple global functions for reliability
  window.toggleAIChat = function() {
    const panel = document.getElementById('ai-chat-panel');
    const input = document.getElementById('chat-input');
    panel.classList.toggle('open');
    if(panel.classList.contains('open') && input) setTimeout(() => input.focus(), 100);
  }

  window.closeAIChat = function() {
    document.getElementById('ai-chat-panel').classList.remove('open');
  }

  // Handle outside click
  document.addEventListener('click', function(e) {
    const panel = document.getElementById('ai-chat-panel');
    const trigger = document.getElementById('ai-chat-trigger');
    if (panel && panel.classList.contains('open') && 
        !panel.contains(e.target) && 
        !trigger.contains(e.target)) {
      panel.classList.remove('open');
    }
  });

  // Rate limiting logic (10 msgs per user / day)
  function checkRateLimit() {
    const limit = 10;
    const now = new Date();
    const todayStr = now.toISOString().split('T')[0];
    
    let usage = null;
    try {
      usage = JSON.parse(localStorage.getItem('ai_chat_usage'));
    } catch(e) {}
    
    if (!usage || usage.date !== todayStr) {
      usage = { date: todayStr, count: 0 };
    }
    
    if (usage.count >= limit) {
      return false; // Limit reached
    }
    
    usage.count += 1;
    localStorage.setItem('ai_chat_usage', JSON.stringify(usage));
    return true; // OK
  }

  // Chat logic
  window.handleChatSubmit = async function(e) {
    e.preventDefault();
    const widget = document.getElementById('ai-chat-widget');
    const lang = widget?.dataset.lang || 'en';
    const input = document.getElementById('chat-input');
    const messages = document.getElementById('chat-messages');
    
    const txt = input.value.trim();
    if (!txt) return;

    const t = lang === 'tr' ? 
      { limitReached: '‚ö†Ô∏è G√ºnl√ºk 10 mesaj limitinize ula≈ütƒ±nƒ±z. L√ºtfen yarƒ±n tekrar gelin!', thinking: 'D√º≈ü√ºn√ºyorum...', error: 'Hata olu≈ütu.' } : 
      { limitReached: '‚ö†Ô∏è You have reached your daily limit of 10 messages. Please come back tomorrow!', thinking: 'Thinking...', error: 'An error occurred.' };

    function addMsg(text, role) {
      const div = document.createElement('div');
      div.className = `message ${role}`;
      div.innerHTML = `<p>${text.replace(/\\n/g, '<br>')}</p>`;
      messages.appendChild(div);
      messages.scrollTop = messages.scrollHeight;
    }

    addMsg(txt, 'user');
    input.value = '';

    if (!checkRateLimit()) {
      return addMsg(t.limitReached, 'assistant');
    }

    // Loading
    const loadId = 'loading-' + Date.now();
    const loader = document.createElement('div');
    loader.id = loadId;
    loader.className = 'message assistant thinking';
    loader.innerText = t.thinking;
    messages.appendChild(loader);
    messages.scrollTop = messages.scrollHeight;

    try {
       const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash:generateContent?key=${window.GEMINI_API_KEY}`;

       const systemPrompt = "You are a highly helpful and precise Electrical Engineering tutor. Answer student questions concisely and academically.";
       
       const res = await fetch(url, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            contents: [{ role: 'user', parts: [{ text: txt }] }],
            systemInstruction: { role: 'user', parts: [{ text: systemPrompt }] },
            generationConfig: { temperature: 0.3 }
          })
       });
       document.getElementById(loadId)?.remove();
       
       if (!res.ok) throw new Error('API request failed');

       const data = await res.json();
       const answer = data.candidates?.[0]?.content?.parts?.[0]?.text || t.error;

       addMsg(answer, 'assistant');
    } catch(err) {
       document.getElementById(loadId)?.remove();
       addMsg(t.error, 'assistant');
    }
  }
</script>
