  .chat-close:hover { background: var(--bg-tertiary, #f3f4f6); }
  [data-theme="dark"] .chat-close:hover { background: #334155; }
  
  .chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: 16px;
    max-height: 280px;
    display: flex;
    flex-direction: column;
