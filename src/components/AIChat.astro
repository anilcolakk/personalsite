<script is:inline>
  // Groq AI Integration - FREE!
  const GROQ_API_URL = 'https://api.groq.com/openai/v1/chat/completions';
  
  // Robust initialization
  function initAIChat() {
    const widget = document.getElementById('ai-chat-widget');
    if (!widget) return; // Wait for next cycle if not ready

    const lang = widget.dataset.lang || 'en';
    
    const siteNotes = [
       { code: 'EE202', name: 'Circuit Analysis', desc: 'DC/AC circuits, nodal/mesh analysis' },
       { code: 'EE301', name: 'Electronics I', desc: 'Diodes, BJTs, MOSFETs' },
       { code: 'EE361', name: 'Signals & Systems', desc: 'Fourier, Laplace, Z-transform' },
       { code: 'EE402', name: 'Discrete Time Systems', desc: 'DSP fundamentals' }
    ];

    const texts = {
      en: {
        thinking: 'Thinking...',
        error: 'Error. Check API key.',
        noKey: 'Please add your free Groq API key first.',
        saved: 'API key saved! AI is ready.',
        systemPrompt: `You are a helpful AI tutor for EE students. Access to: ${siteNotes.map(n=>n.code).join(', ')}. Recommend notes explicitly.`
      },
      tr: {
        thinking: 'DÃ¼ÅŸÃ¼nÃ¼yorum...',
        error: 'Hata. API anahtarÄ±nÄ± kontrol et.',
        noKey: 'LÃ¼tfen Ã¶nce API anahtarÄ±nÄ± ekle.',
        saved: 'API anahtarÄ± kaydedildi!',
        systemPrompt: `EE Ã¶ÄŸrencileri iÃ§in yapay zeka asistanÄ±sÄ±n. Åžu notlara eriÅŸimin var: ${siteNotes.map(n=>n.code).join(', ')}. NotlarÄ± Ã¶ner.`
      }
    };
    
    const t = texts[lang];
    const trigger = document.getElementById('ai-chat-trigger');
    const panel = document.getElementById('ai-chat-panel');
    const closeBtn = document.getElementById('chat-close');
    const form = document.getElementById('chat-form');
    const input = document.getElementById('chat-input');
    const messages = document.getElementById('chat-messages');
    const apiSection = document.getElementById('chat-api-section');
    const apiKeyInput = document.getElementById('groq-api-key');
    const saveKeyBtn = document.getElementById('save-groq-key');
    
    // Load key
    const savedKey = localStorage.getItem('groq_api_key');
    if (savedKey) {
      if(apiSection) apiSection.classList.add('hidden');
      if(apiKeyInput) apiKeyInput.value = savedKey;
    }
    
    // Events
    trigger.onclick = () => {
       panel.classList.toggle('open');
       if(panel.classList.contains('open')) setTimeout(() => input.focus(), 100);
    };
    
    closeBtn.onclick = () => panel.classList.remove('open');
    
    saveKeyBtn.onclick = () => {
      const key = apiKeyInput.value.trim();
      if (key.startsWith('gsk_')) {
        localStorage.setItem('groq_api_key', key);
        if(apiSection) apiSection.classList.add('hidden');
        addMsg(t.saved, 'assistant');
      } else {
        addMsg('Key must start with "gsk_"', 'assistant');
      }
    };

    let history = [];

    form.onsubmit = async (e) => {
      e.preventDefault();
      const txt = input.value.trim();
      if (!txt) return;

      const key = localStorage.getItem('groq_api_key');
      if (!key) { return addMsg(t.noKey, 'assistant'); }

      addMsg(txt, 'user');
      input.value = '';
      
      const loadId = 'loading-' + Date.now();
      const div = document.createElement('div');
      div.id = loadId;
      div.className = 'message assistant thinking';
      div.innerText = t.thinking;
      messages.appendChild(div);
      messages.scrollTop = messages.scrollHeight;
      
      history.push({ role: 'user', content: txt });

      try {
        const res = await fetch(GROQ_API_URL, {
           method: 'POST',
           headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${key}` },
           body: JSON.stringify({
              model: 'llama-3.3-70b-versatile',
              messages: [{role: 'system', content: t.systemPrompt}, ...history.slice(-5)],
              max_tokens: 400
           })
        });
        
        document.getElementById(loadId)?.remove();
        const json = await res.json();
        const reply = json.choices?.[0]?.message?.content || 'Error';
        
        history.push({ role: 'assistant', content: reply });
        addMsg(reply, 'assistant');
      } catch(err) {
        document.getElementById(loadId)?.remove();
        addMsg(t.error, 'assistant');
      }
    };

    function addMsg(txt, role) {
       const div = document.createElement('div');
       div.className = `message ${role}`;
       div.innerHTML = `<p>${txt.replace(/\n/g, '<br>')}</p>`;
       messages.appendChild(div);
       messages.scrollTop = messages.scrollHeight;
    }
  }

<script is:inline>
  // Robust AI Chat Initialization
  (function() {
    const init = () => {
      const widget = document.getElementById('ai-chat-widget');
      if (!widget) return;

      const trigger = document.getElementById('ai-chat-trigger');
      const panel = document.getElementById('ai-chat-panel');
      const closeBtn = document.getElementById('chat-close');
      const input = document.getElementById('chat-input');
      const lang = widget.dataset.lang || 'en';

      // Simple Toggle Logic
      const toggle = (e) => {
        e?.stopPropagation();
        panel.classList.toggle('open');
        if (panel.classList.contains('open')) {
          setTimeout(() => input?.focus(), 100);
        }
      };

      // Events
      trigger.onclick = toggle;
      closeBtn.onclick = () => panel.classList.remove('open');
      
      // Close on outside click
      document.addEventListener('click', (e) => {
        if (panel.classList.contains('open') && 
            !panel.contains(e.target) && 
            !trigger.contains(e.target)) {
          panel.classList.remove('open');
        }
      });
    };

    // Run immediately if present, otherwise wait
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
    
    // Safety check for Astro view transitions
    document.addEventListener('astro:page-load', init);
  })();
</script>
