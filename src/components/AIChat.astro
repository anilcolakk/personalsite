  }
</style>

<script>
  // Groq AI Integration - FREE!
  const GROQ_API_URL = 'https://api.groq.com/openai/v1/chat/completions';
  
  const widget = document.getElementById('ai-chat-widget');
  const lang = widget?.dataset.lang || 'en';
  
  const texts = {
    en: {
      thinking: 'Thinking...',
      error: 'Error. Check your API key or try again.',
      noKey: 'Please add your free Groq API key first. Get one at console.groq.com',
      saved: 'API key saved! AI is ready.',
      systemPrompt: `You are a helpful AI tutor for Electrical & Electronics Engineering students. You help with:
- Circuit Analysis (Ohm's Law, Kirchhoff, ThÃ©venin, Norton)
- Electronics (diodes, transistors, op-amps)
- Signals & Systems (Fourier, Laplace, convolution)
- Math for Engineers
- Study tips and exam preparation

Be concise, clear, and educational. Use formulas when helpful. Keep responses under 150 words unless complex derivation is needed.`
    },
    tr: {
      thinking: 'DÃ¼ÅŸÃ¼nÃ¼yorum...',
      error: 'Hata. API anahtarÄ±nÄ± kontrol et veya tekrar dene.',
      noKey: 'LÃ¼tfen Ã¶nce Ã¼cretsiz Groq API anahtarÄ±nÄ± ekle. console.groq.com adresinden al.',
      saved: 'API anahtarÄ± kaydedildi! Yapay zeka hazÄ±r.',
      systemPrompt: `Sen Elektrik-Elektronik MÃ¼hendisliÄŸi Ã¶ÄŸrencileri iÃ§in yardÄ±mcÄ± bir yapay zeka Ã¶ÄŸretmenisin. Åžunlarda yardÄ±m ediyorsun:
- Devre Analizi (Ohm YasasÄ±, Kirchhoff, ThÃ©venin, Norton)
- Elektronik (diyotlar, transistÃ¶rler, op-amp'ler)
- Sinyaller ve Sistemler (Fourier, Laplace, konvolÃ¼syon)
- MÃ¼hendislik MatematiÄŸi
- Ã‡alÄ±ÅŸma ipuÃ§larÄ± ve sÄ±nav hazÄ±rlÄ±ÄŸÄ±

KÄ±sa, net ve eÄŸitici ol. GerektiÄŸinde formÃ¼l kullan. KarmaÅŸÄ±k tÃ¼retmeler haricinde 150 kelimeden kÄ±sa tut.`
    }
  };
  
  const t = texts[lang as 'en' | 'tr'];
  
  // UI Elements
  const trigger = document.getElementById('ai-chat-trigger');
  const panel = document.getElementById('ai-chat-panel');
  const closeBtn = document.getElementById('chat-close');
  const form = document.getElementById('chat-form');
  const input = document.getElementById('chat-input') as HTMLInputElement;
  const messagesContainer = document.getElementById('chat-messages');
  const apiSection = document.getElementById('chat-api-section');
  const apiKeyInput = document.getElementById('groq-api-key') as HTMLInputElement;
  const saveKeyBtn = document.getElementById('save-groq-key');
  
  // Check for saved key
  const savedKey = localStorage.getItem('groq_api_key');
  if (savedKey) {
    apiSection?.classList.add('hidden');
    if (apiKeyInput) apiKeyInput.value = savedKey;
  }
  
  // Toggle panel
  trigger?.addEventListener('click', () => panel?.classList.toggle('open'));
  closeBtn?.addEventListener('click', () => panel?.classList.remove('open'));
  
  // Save API key
  saveKeyBtn?.addEventListener('click', () => {
    const key = apiKeyInput?.value.trim();
    if (key && key.startsWith('gsk_')) {
      localStorage.setItem('groq_api_key', key);
      apiSection?.classList.add('hidden');
      addMessage(t.saved, 'assistant');
    } else {
      addMessage('Invalid key format. It should start with "gsk_"', 'assistant');
    }
  });
  
  // Message history for context
  let messageHistory: {role: string, content: string}[] = [];
  
  // Handle form submit
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const message = input.value.trim();
    if (!message) return;
    
    const apiKey = localStorage.getItem('groq_api_key');
    if (!apiKey) {
      addMessage(t.noKey, 'assistant');
      return;
    }
    
    addMessage(message, 'user');
    input.value = '';
    
    // Add thinking indicator
    const thinkingDiv = document.createElement('div');
    thinkingDiv.className = 'message assistant thinking';
    thinkingDiv.innerHTML = `<p>${t.thinking}</p>`;
    messagesContainer?.appendChild(thinkingDiv);
    messagesContainer?.scrollTo({ top: messagesContainer.scrollHeight, behavior: 'smooth' });
    
    // Add to history
    messageHistory.push({ role: 'user', content: message });
    
    try {
      const response = await fetch(GROQ_API_URL, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${apiKey}`
        },
        body: JSON.stringify({
          model: 'llama-3.3-70b-versatile',
          messages: [
            { role: 'system', content: t.systemPrompt },
            ...messageHistory.slice(-6) // Keep last 6 messages for context
          ],
          max_tokens: 500,
          temperature: 0.7
        })
      });
      
      thinkingDiv.remove();
      
      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.error?.message || 'API error');
      }
      
      const data = await response.json();
      const reply = data.choices?.[0]?.message?.content || 'No response';
      
      messageHistory.push({ role: 'assistant', content: reply });
      addMessage(reply, 'assistant');
      
    } catch (err: any) {
      thinkingDiv.remove();
      addMessage(`${t.error} (${err.message})`, 'assistant');
    }
  });
  
  function addMessage(text: string, role: 'user' | 'assistant') {
    const div = document.createElement('div');
    div.className = `message ${role}`;
    // Convert markdown-style formatting
    const formatted = text
      .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
      .replace(/\n/g, '<br>');
    div.innerHTML = `<p>${formatted}</p>`;
    messagesContainer?.appendChild(div);
    messagesContainer?.scrollTo({ top: messagesContainer.scrollHeight, behavior: 'smooth' });
  }
</script>
