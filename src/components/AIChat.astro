    color: #e2e8f0;
  }
  
  .message.user {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    align-self: flex-end;
    max-width: 85%;
  }
  
  .message.thinking {
    background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
