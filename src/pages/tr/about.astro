---
import BaseLayout from '@layouts/BaseLayout.astro';

const skills = [
  { name: 'Devre Tasarımı', level: 95 },
  { name: 'VLSI Tasarımı', level: 90 },
  { name: 'MATLAB', level: 85 },
  { name: 'Python Programlama', level: 88 },
  { name: 'Robotik', level: 85 },
  { name: 'PCB Tasarımı', level: 80 },
];

const timeline = [
  { year: '2021', title: 'ODTÜ EEE\'de Başladım', description: 'Elektrik-Elektronik Mühendisliği yolculuğuma başladım' },
  { year: '2021', title: 'Not Oluşturmaya Başladım', description: 'Temel dersler için kapsamlı çalışma materyalleri geliştirdim' },
  { year: '2024', title: 'Fizik Çift Dalı Başladı', description: 'Fizik alanında çift dal ana programına başladım' },
  { year: '2025', title: 'ASELSAN\'da Aday Mühendis', description: 'ASELSAN\'a VLSI Tasarım Aday Mühendisi olarak katıldım' },
  { year: '2026', title: 'Bu Platformu Açtım', description: 'EEE öğrencilerine yardımcı olmak için kaynaklarımı yayına aldım' },
  { year: '2027', title: 'Beklenen Mezuniyet', description: 'UMARIM...' },
];

const base = import.meta.env.BASE_URL === '/' ? '' : import.meta.env.BASE_URL.replace(/\/$/, '');
---

<BaseLayout title="Hakkımda" description="METU EE Resources'un yaratıcısı hakkında daha fazla bilgi edinin">
  <section class="about-page">
    <div class="container">
      <div class="about-hero">
        <div class="profile-section">
          <div class="profile-image-wrapper">
            <div class="profile-image">
              <div class="profile-placeholder">
                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
              </div>
            </div>
            <div class="profile-status">
              <span class="status-dot"></span>
              <span>İş birliğine açık</span>
            </div>
          </div>
          
          <div class="profile-info">
            <h1 class="profile-name">Anıl Salih Çolak</h1>
            <p class="profile-title">Elektrik ve Elektronik Mühendisliği Öğrencisi</p>
            <p class="profile-subtitle">ODTÜ • 2021 Girişli</p>
            
            <p class="profile-bio">
              Elektronik, robotik ve diğer öğrencilerin başarısına yardımcı olmak konusunda tutkuluyum. 
              Bu platformu, derslerimde başarılı olmamı sağlayan çalışma materyallerini paylaşmak için oluşturdum. 
              Herkes için kaliteli eğitimi daha erişilebilir kılmak istiyorum.
            </p>
            
            <div class="profile-stats">
              <div class="stat">
                <span class="stat-number">3.3+</span>
                <span class="stat-label">GNO</span>
              </div>
              <div class="stat">
                <span class="stat-number">50+</span>
                <span class="stat-label">Ders</span>
              </div>
              <div class="stat">
                <span class="stat-number">100+</span>
                <span class="stat-label">Yardım Edilen Öğrenci</span>
              </div>
            </div>
            
            <div class="profile-actions">
              <a href={`${base}/tr/contact`} class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
                İletişime Geç
              </a>
              <a href="https://www.linkedin.com/in/an%C4%B1l-salih-%C3%A7olak-554793153/" target="_blank" class="btn btn-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                LinkedIn
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <div class="skills-section">
        <h2 class="section-title">Yetenekler ve Uzmanlık</h2>
        <div class="skills-grid">
          {skills.map((skill) => (
            <div class="skill-tag">
              {skill.name}
            </div>
          ))}
        </div>
      </div>
      
      <div class="timeline-section">
        <h2 class="section-title">Yolculuğum</h2>
        <div class="timeline">
          {timeline.map((item, i) => (
            <div class="timeline-item">
              <div class="timeline-marker">
                <div class="timeline-dot"></div>
                {i < timeline.length - 1 && <div class="timeline-line"></div>}
              </div>
              <div class="timeline-content">
                <span class="timeline-year">{item.year}</span>
                <h3 class="timeline-title">{item.title}</h3>
                <p class="timeline-desc">{item.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .about-page { padding: var(--space-12) 0 var(--space-20); }
  .about-hero { margin-bottom: var(--space-16); }
  .profile-section { display: grid; grid-template-columns: auto 1fr; gap: var(--space-12); align-items: start; }
  .profile-image-wrapper { text-align: center; }
  .profile-image { width: 200px; height: 200px; border-radius: var(--radius-2xl); background: var(--bg-tertiary); display: flex; align-items: center; justify-content: center; margin-bottom: var(--space-4); border: 4px solid var(--primary-200); }
  [data-theme="dark"] .profile-image { border-color: var(--primary-700); }
  .profile-placeholder { color: var(--text-tertiary); }
  .profile-status { display: inline-flex; align-items: center; gap: var(--space-2); padding: var(--space-2) var(--space-3); background: var(--success-500); color: white; border-radius: var(--radius-full); font-size: var(--text-xs); font-weight: 600; }
  .status-dot { width: 8px; height: 8px; background: white; border-radius: 50%; animation: pulse 2s infinite; }
  .profile-name { font-size: var(--text-4xl); font-weight: 800; margin-bottom: var(--space-2); }
  .profile-title { font-size: var(--text-xl); color: var(--primary-600); font-weight: 600; margin-bottom: var(--space-1); }
  [data-theme="dark"] .profile-title { color: var(--primary-400); }
  .profile-subtitle { color: var(--text-tertiary); margin-bottom: var(--space-4); }
  .profile-bio { font-size: var(--text-lg); color: var(--text-secondary); line-height: 1.8; margin-bottom: var(--space-6); max-width: 600px; }
  .profile-stats { display: flex; gap: var(--space-8); margin-bottom: var(--space-6); }
  .stat { text-align: center; }
  .stat-number { display: block; font-size: var(--text-3xl); font-weight: 800; color: var(--primary-600); }
  [data-theme="dark"] .stat-number { color: var(--primary-400); }
  .stat-label { font-size: var(--text-sm); color: var(--text-tertiary); }
  .profile-actions { display: flex; gap: var(--space-3); }
  
  .skills-section, .timeline-section { margin-bottom: var(--space-16); }
  .section-title { font-size: var(--text-2xl); font-weight: 700; margin-bottom: var(--space-8); }
  .skills-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }
  
  .skill-tag {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-full);
    padding: var(--space-3) var(--space-6);
    font-weight: 600;
    color: var(--text-primary);
    transition: all 0.2s;
    font-size: var(--text-sm);
  }
  
  .skill-tag:hover {
    border-color: var(--primary-400);
    transform: translateY(-2px);
    background: var(--bg-tertiary);
    color: var(--primary-600);
  }
  
  .timeline { position: relative; }
  .timeline-item { display: flex; gap: var(--space-6); margin-bottom: var(--space-8); }
  .timeline-marker { display: flex; flex-direction: column; align-items: center; }
  .timeline-dot { width: 16px; height: 16px; background: var(--primary-500); border-radius: 50%; flex-shrink: 0; }
  .timeline-line { width: 2px; flex: 1; background: var(--border-color); margin-top: var(--space-2); }
  .timeline-content { flex: 1; padding-bottom: var(--space-4); }
  .timeline-year { display: inline-block; padding: var(--space-1) var(--space-3); background: var(--primary-50); color: var(--primary-700); border-radius: var(--radius-full); font-size: var(--text-xs); font-weight: 600; margin-bottom: var(--space-2); }
  [data-theme="dark"] .timeline-year { background: rgba(59,130,246,0.2); color: var(--primary-300); }
  .timeline-title { font-size: var(--text-lg); font-weight: 700; margin-bottom: var(--space-1); }
  .timeline-desc { color: var(--text-secondary); }
  
  @media (max-width: 768px) {
    .profile-section { grid-template-columns: 1fr; text-align: center; }
    .profile-bio { margin-left: auto; margin-right: auto; }
    .profile-stats { justify-content: center; }
    .profile-actions { justify-content: center; }
    .skills-grid { grid-template-columns: 1fr; }
  }
</style>
