  .category-btn:hover { color: var(--text-primary); border-color: var(--border-color-hover); }
  .category-btn.active { color: white; background: var(--primary-600); border-color: var(--primary-600); }
  
  .featured-post { display: grid; grid-template-columns: 1fr 1fr; gap: var(--space-8); margin-bottom: var(--space-12); padding: var(--space-8); background: var(--bg-card); border: 1px solid var(--border-color); border-radius: var(--radius-2xl); }
  .featured-content { display: flex; flex-direction: column; }
  .post-meta { display: flex; align-items: center; gap: var(--space-3); margin-bottom: var(--space-4); }
  .post-category { font-size: var(--text-xs); font-weight: 700; color: var(--primary-600); background: var(--primary-50); padding: var(--space-1) var(--space-3); border-radius: var(--radius-full); text-transform: uppercase; }
  [data-theme="dark"] .post-category { color: var(--primary-400); background: rgba(59,130,246,0.15); }
  .post-date { font-size: var(--text-sm); color: var(--text-tertiary); }
