  .finder-header { text-align: center; margin-bottom: 40px; }
  .finder-header h1 { font-size: 2.5rem; font-weight: 800; margin-bottom: 10px; }
  .finder-header p { color: var(--text-secondary); font-size: 1.1rem; }

