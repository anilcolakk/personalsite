  .col-content { flex: 1; overflow-y: auto; padding: 10px; }
  
  .col-search { 
    padding: 10px 20px; border-bottom: 1px solid var(--border-color); 
    display: flex; align-items: center; gap: 10px; color: var(--text-tertiary);
  }
