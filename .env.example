# Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# SITE CONFIGURATION
# ============================================
SITE_URL=https://your-domain.com

# ============================================
# SHOPIER INTEGRATION
# ============================================
# Get these from your Shopier seller dashboard
SHOPIER_API_KEY=your_shopier_api_key_here
SHOPIER_API_SECRET=your_shopier_api_secret_here

# ============================================
# OPTIONAL SETTINGS
# ============================================
# For development, you can use Shopier sandbox/test mode
SHOPIER_SANDBOX_MODE=false
